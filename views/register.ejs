<%- include('layouts/app_layout.ejs') %>
<div class="container-fluid h-100 p-0 m-0">
    <div class="row h-100 justify-content-center no-gutters pt-3">
        <div class="col-md-5 col-sm-9 pt-lg-5">
            <form action="/users/register" method="post" class="login-form">
                <div class="card">
                    <card class="card-header ">
                        Users Register
                    </card>
                    <div class="card-body m-5">
                        <div class="form-group input-wrapper mb-4">
                            <i class="fas fa-user glyphicon"></i>
                            <input type="text" class="form-control rounded-pill" name="name" placeholder="Enter your name">
                        </div>
                        <div class="form-group input-wrapper mb-4">
                            <i class="fas fa-envelope-square glyphicon"></i>
                            <input type="text" class="form-control rounded-pill" name="email" placeholder="Enter your email">
                        </div>
                        <div class="form-group input-wrapper">
                            <i class="fas fa-lock glyphicon"></i>
                            <input type="text" class="form-control rounded-pill" name="password" placeholder="Enter your password">
                        </div>
                        <div class="form-group input-wrapper">
                            <i class="fas fa-lock glyphicon"></i>
                            <input type="text" class="form-control rounded-pill" name="cpassword" placeholder="Confirm your password">
                        </div>
                    </div>
                    <div class="card-footer">
                        <div class="row no-gutters">
                            <div class="col-lg-12 ">
                                <button type="submit"  class="btn btn-dark btn-block"><i class="fas fa-plus-circle mr-2"></i>Register</button>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
</body>
</html>
